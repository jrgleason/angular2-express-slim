.all
  .show-heros
    h2 My Heros
    ul.heroes
      li(
        *ngFor="let hero of heroes"
      )
        span.badge {{hero.id}}
        span {{hero.name}}
  .edit-hero
    h1 {{title}}
    h2 {{hero.name}} details!
    div
      span
        label id:&nbsp;
      span {{hero.id}}
    div
      span
        label name:&nbsp;
      span
        input(
          [(ngModel)]="hero.name",
          placeholder="name"
        )
