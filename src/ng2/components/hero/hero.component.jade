.all(style="display:flex;")
  .show-heros
    h2 My Heros
    ul.heroes
      li(
        [class.selected]="hero === selectedHero",
        *ngFor="let hero of heroes",
        (click)="onSelect(hero)"
      )
        span.badge {{hero.id}}
        span {{hero.name}}
  .edit-hero(
      *ngIf="selectedHero"
    )
    h1 {{title}}
    h2 {{selectedHero.name}} details!
    div
      span
        label id:&nbsp;
      span {{selectedHero.id}}
    div
      span
        label name:&nbsp;
      span
        input(
          [(ngModel)]="selectedHero.name",
          placeholder="name"
        )
