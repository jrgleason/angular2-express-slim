.all(style="display:flex;")
  .show-heros
    h2 My Heros
    ul.heroes
      li(
        [class.selected]="hero === selectedHero",
        *ngFor="let hero of heroes",
        (click)="onSelect(hero)"
      )
        span.badge {{hero.id}}
        span {{hero.name}}
  .edit-hero
    my-hero-detail(
      [hero]="selectedHero"
    )
    button(md-raised-button) FLAT
